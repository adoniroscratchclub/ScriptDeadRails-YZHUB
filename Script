-- YZHUB com AUTO FIM + FLY R√ÅPIDO
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local root = char:WaitForChild("HumanoidRootPart")

-- Criar GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 150, 0, 120)
frame.Position = UDim2.new(0, 20, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

-- Bot√£o Auto Fim
local btn1 = Instance.new("TextButton", frame)
btn1.Size = UDim2.new(1, 0, 0.5, 0)
btn1.Position = UDim2.new(0, 0, 0, 0)
btn1.Text = "AUTO FIM"
btn1.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
btn1.TextColor3 = Color3.fromRGB(255, 255, 255)
btn1.Font = Enum.Font.SourceSansBold
btn1.TextSize = 20

btn1.MouseButton1Click:Connect(function()
    root.CFrame = root.CFrame + root.CFrame.lookVector * 500
end)

-- Bot√£o Fly
local btn2 = Instance.new("TextButton", frame)
btn2.Size = UDim2.new(1, 0, 0.5, 0)
btn2.Position = UDim2.new(0, 0, 0.5, 0)
btn2.Text = "FLY: OFF"
btn2.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
btn2.TextColor3 = Color3.fromRGB(255, 255, 255)
btn2.Font = Enum.Font.SourceSansBold
btn2.TextSize = 20

-- Script de voo
local flying = false
local speed = 150  -- üöÄ Fly super r√°pido

btn2.MouseButton1Click:Connect(function()
    flying = not flying
    btn2.Text = flying and "FLY: ON" or "FLY: OFF"

    local bodyGyro = Instance.new("BodyGyro", root)
    bodyGyro.P = 9e4
    bodyGyro.maxTorque = Vector3.new(9e9, 9e9, 9e9)
    bodyGyro.cframe = root.CFrame

    local bodyVelocity = Instance.new("BodyVelocity", root)
    bodyVelocity.velocity = Vector3.new(0, 0, 0)
    bodyVelocity.maxForce = Vector3.new(9e9, 9e9, 9e9)

    spawn(function()
        while flying do
            wait()
            bodyGyro.cframe = workspace.CurrentCamera.CFrame
            bodyVelocity.velocity = workspace.CurrentCamera.CFrame.lookVector * speed
        end
        bodyGyro:Destroy()
        bodyVelocity:Destroy()
    end)
end)
