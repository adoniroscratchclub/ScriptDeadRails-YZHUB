-- Dead Rails AutoFarm Script Completo - YZHUB -- Criado por Rodrigo para Yuri local Players = game:GetService("Players") local LocalPlayer = Players.LocalPlayer local PlayerGui = LocalPlayer:WaitForChild("PlayerGui") -- UI Setup local ScreenGui = Instance.new("ScreenGui") ScreenGui.Name = "YZHUB" ScreenGui.ResetOnSpawn = false ScreenGui.Parent = PlayerGui local MainFrame = Instance.new("Frame") MainFrame.Name = "MainFrame" MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20) MainFrame.Position = UDim2.new(0.05, 0, 0.2, 0) MainFrame.Size = UDim2.new(0, 520, 0, 340) MainFrame.Active = true MainFrame.Draggable = true MainFrame.Parent = ScreenGui local Title = Instance.new("TextLabel") Title.Name = "Title" Title.Parent = MainFrame Title.BackgroundColor3 = Color3.fromRGB(15, 15, 15) Title.Size = UDim2.new(1, 0, 0, 30) Title.Font = Enum.Font.GothamBold Title.Text = "YZHUB - Dead Rails AutoFarm ⚙️" Title.TextColor3 = Color3.fromRGB(0, 255, 127) Title.TextSize = 18 -- Tabs local Tabs = {} local tabNames = {"Farm", "Combate", "Coleta", "Config"} local function clearContent() for _, child in pairs(MainFrame:GetChildren()) do if child.Name == "Content" then child:Destroy() end end end local currentTab = nil local function createToggleButton(parent, name, position, callback) local btn = Instance.new("TextButton") btn.Name = name btn.Parent = parent btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35) btn.Position = position btn.Size = UDim2.new(0, 220, 0, 35) btn.Font = Enum.Font.Gotham btn.Text = name .. ": OFF" btn.TextColor3 = Color3.fromRGB(255, 80, 80) btn.TextSize = 16 btn.AutoButtonColor = true local toggled = false btn.MouseButton1Click:Connect(function() toggled = not toggled if toggled then btn.Text = name .. ": ON" btn.TextColor3 = Color3.fromRGB(0, 255, 127) else btn.Text = name .. ": OFF" btn.TextColor3 = Color3.fromRGB(255, 80, 80) end callback(toggled) end) return btn end local function createLabel(parent, text, position) local lbl = Instance.new("TextLabel") lbl.Parent = parent lbl.BackgroundTransparency = 1 lbl.Position = position lbl.Size = UDim2.new(0, 220, 0, 25) lbl.Font = Enum.Font.Gotham lbl.Text = text lbl.TextColor3 = Color3.fromRGB(200, 200, 200) lbl.TextSize = 16 lbl.TextXAlignment = Enum.TextXAlignment.Left return lbl end for i, name in ipairs(tabNames) do local tabBtn = Instance.new("TextButton") tabBtn.Name = name tabBtn.Parent = MainFrame tabBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30) tabBtn.Position = UDim2.new(0, (i - 1) * 130, 0, 30) tabBtn.Size = UDim2.new(0, 130, 0, 30) tabBtn.Font = Enum.Font.Gotham tabBtn.Text = name tabBtn.TextColor3 = Color3.fromRGB(255, 255, 255) tabBtn.TextSize = 16 tabBtn.MouseButton1Click:Connect(function() if currentTab == name then return end currentTab = name clearContent() local contentFrame = Instance.new("Frame") contentFrame.Name = "Content" contentFrame.Parent = MainFrame contentFrame.BackgroundTransparency = 1 contentFrame.Position = UDim2.new(0, 10, 0, 70) contentFrame.Size = UDim2.new(1, -20, 1, -80) if name == "Farm" then createLabel(contentFrame, "Auto Win", UDim2.new(0, 0, 0, 0)) createToggleButton(contentFrame, "Auto Win", UDim2.new(0, 0, 0, 25), function(state) AutoWinEnabled = state end) createLabel(contentFrame, "Farm Bond", UDim2.new(0, 0, 0, 70)) createToggleButton(contentFrame, "Farm Bond", UDim2.new(0, 0, 0, 95), function(state) FarmBondEnabled = state end) createLabel(contentFrame, "Infinite Bond", UDim2.new(0, 0, 0, 140)) createToggleButton(contentFrame, "Infinite Bond", UDim2.new(0, 0, 0, 165), function(state) InfiniteBondEnabled = state end) elseif name == "Combate" then createLabel(contentFrame, "Auto Farm", UDim2.new(0, 0, 0, 0)) createToggleButton(contentFrame, "Auto Farm", UDim2.new(0, 0, 0, 25), function(state) AutoFarmEnabled = state end) createLabel(contentFrame, "Auto Attack", UDim2.new(0, 0, 0, 70)) createToggleButton(contentFrame, "Auto Attack", UDim2.new(0, 0, 0, 95), function(state) AutoAttackEnabled = state end) elseif name == "Coleta" then createLabel(contentFrame, "Auto Collect", UDim2.new(0, 0, 0, 0)) createToggleButton(contentFrame, "Auto Collect", UDim2.new(0, 0, 0, 25), function(state) AutoCollectEnabled = state end) elseif name == "Config" then createLabel(contentFrame, "Team Check (Bloqueia auto se time estiver)", UDim2.new(0, 0, 0, 0)) createToggleButton(contentFrame, "Team Check", UDim2.new(0, 0, 0, 25), function(state) TeamCheckEnabled = state end) local ignoreBtn = Instance.new("TextButton") ignoreBtn.Parent = contentFrame ignoreBtn.BackgroundColor3 = Color3.fromRGB(200, 80, 80) ignoreBtn.Position = UDim2.new(0, 0, 0, 70) ignoreBtn.Size = UDim2.new(0, 220, 0, 35) ignoreBtn.Font = Enum.Font.GothamBold ignoreBtn.Text = "Ignorar Team Check" ignoreBtn.TextColor3 = Color3.fromRGB(255, 255, 255) ignoreBtn.TextSize = 16 ignoreBtn.MouseButton1Click:Connect(function() IgnoreTeamCheck = true print("Team Check ignorado!") end) end end) end -- Inicializa variáveis de controle local AutoWinEnabled = false local FarmBondEnabled = false local InfiniteBondEnabled = false local AutoFarmEnabled = false local AutoAttackEnabled = false local AutoCollectEnabled = false local TeamCheckEnabled = false local IgnoreTeamCheck = false -- Função simples para detectar se tem alguém no time local function teamCheck() if not TeamCheckEnabled or IgnoreTeamCheck then return false -- não bloqueia end -- Exemplo genérico: detecta players próximos (você adapta pra Dead Rails) for _, player in pairs(Players:GetPlayers()) do if player ~= LocalPlayer then local dist = (player.Character and player.Character:FindFirstChild("HumanoidRootPart")) and (LocalPlayer.Character.HumanoidRootPart.Position - player.Character.HumanoidRootPart.Position).Magnitude or 1000 if dist < 50 then return true end end end return false end -- Funções simuladas para as ações local function doAutoWin() if AutoWinEnabled and not teamCheck() then print("[AutoWin] Tentando finalizar rodada...") -- Sua lógica aqui end end local function doFarmBond() if FarmBondEnabled and not teamCheck() then print("[FarmBond] Farmando Bond...") -- Sua lógica aqui end end local function doInfiniteBond() if InfiniteBondEnabled then print("[InfiniteBond] Bond infinito ativo...") -- Sua lógica aqui end end local function doAutoFarm() if AutoFarmEnabled and not teamCheck() then print("[AutoFarm] Farmando zumbis...") -- Sua lógica aqui end end local function doAutoAttack() if AutoAttackEnabled and not teamCheck() then print("[AutoAttack] Atacando inimigos...") -- Sua lógica aqui end end local function doAutoCollect() if AutoCollectEnabled and not teamCheck() then print("[AutoCollect] Coletando itens...") -- Sua lógica aqui end end -- Loop principal de execução spawn(function() while true do doAutoWin() doFarmBond() doInfiniteBond() doAutoFarm() doAutoAttack() doAutoCollect() wait(1) end end)
